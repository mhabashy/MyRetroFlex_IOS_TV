<?xml version="1.0" encoding="UTF-8" ?>
<document>
  <head>
    <style>
    .9ColumnGrid {
      tv-interitem-spacing: 51;
    }
    </style>
  </head>
  <productTemplate theme="dark">
    <banner>
      <infoList>
        <info>
          <header>
            <title>genre</title>
          </header>
          <text>[GENRE]</text>
        </info>
        <info>
          <header>
            <title>director</title>
          </header>
          <text>[DIRECTOR]</text>
        </info>
        <info>
          <header>
            <title>release date</title>
          </header>
          <text>[RELEASEDATE]</text>
        </info>
      </infoList>
      <stack>
        <row>
          <buttonLockup movieURL="[HTML5]" movieID="[ID]">
            <badge src="resource://button-play" />
            <title>Watch Now</title>
          </buttonLockup>
        </row>
<!--        <row>-->
        <description handlesOverflow="true">[SUMMARY]</description>
<!--        </row>-->
      </stack>
      <heroImg src="[COVERURL]" width="400" height="600" />
    </banner>
    <shelf class="9ColumnGrid">
      <header>
        <title>You may also like</title>
      </header>
      <section>
        [ALTERNATIVES]
      </section>
    </shelf>
  </productTemplate>
</document>
